<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity41">

    //熊長方形
    <ImageView
        android:id="@+id/a1"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@id/b1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a1" />
    //熊圓形
    <ImageView
        android:id="@+id/b1"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@id/c1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a1"
        app:srcCompat="@drawable/b1" />
    //熊菱形
    <ImageView
        android:id="@+id/c1"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:srcCompat="@drawable/c1" />
    //熊星形
    <ImageView
        android:id="@+id/d1"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@id/e1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/d1" />
    //熊正方形
    <ImageView
        android:id="@+id/e1"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@id/f1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d1"
        app:srcCompat="@drawable/e1" />
    //熊三角形
    <ImageView
        android:id="@+id/f1"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/e1"
        app:srcCompat="@drawable/f1" />

    //長方形
    <ImageView
        android:id="@+id/a"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline5"
        app:layout_constraintStart_toStartOf="@id/guideline6"
        app:srcCompat="@drawable/a" />
    //圓形
    <ImageView
        android:id="@+id/b"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="@id/guideline9"
        app:srcCompat="@drawable/b" />
    //菱形
    <ImageView
        android:id="@+id/c"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"
        app:layout_constraintStart_toStartOf="@id/guideline8"
        app:srcCompat="@drawable/c" />
    //星形
    <ImageView
        android:id="@+id/d"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"
        app:layout_constraintStart_toStartOf="@id/guideline7"
        app:srcCompat="@drawable/d" />
    //正方形
    <ImageView
        android:id="@+id/e"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline5"
        app:layout_constraintStart_toStartOf="@id/guideline9"
        app:srcCompat="@drawable/e" />
    //三角形
    <ImageView
        android:id="@+id/f"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        app:layout_constraintStart_toStartOf="@id/guideline6"
        app:srcCompat="@drawable/f" />

    //水平線
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="123dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="245dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="370dp" />

    //垂直線

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="173dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="237dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="408dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="345dp" />

</androidx.constraintlayout.widget.ConstraintLayout>