<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity62">

    //熊黑色

    <ImageView
        android:id="@+id/m"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@id/n"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/m" />

    //熊咖啡色
    <ImageView
        android:id="@+id/n"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@id/o"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/m"
        app:srcCompat="@drawable/n" />
    //熊粉色
    <ImageView
        android:id="@+id/o"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/n"
        app:srcCompat="@drawable/o" />
    //熊白色
    <ImageView
        android:id="@+id/p"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toTopOf="@id/q"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/p" />
    //熊灰色
    <ImageView
        android:id="@+id/q"
        android:layout_width="173dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p"
        app:srcCompat="@drawable/q" />


    //黑色菇
    <ImageView
        android:id="@+id/m1"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/m1"
        app:layout_constraintBottom_toBottomOf="@id/guideline22"
        app:layout_constraintStart_toStartOf="@id/guideline24"/>
    //咖啡色菇
    <ImageView
        android:id="@+id/n1"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/n1"
        app:layout_constraintBottom_toBottomOf="@id/guideline18"
        app:layout_constraintStart_toStartOf="@id/guideline24"/>
    //粉色菇
    <ImageView
        android:id="@+id/o1"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/o1"
        app:layout_constraintBottom_toBottomOf="@id/guideline20"
        app:layout_constraintStart_toStartOf="@id/guideline24"/>
    //白色菇
    <ImageView
        android:id="@+id/p1"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/p1"
        app:layout_constraintBottom_toBottomOf="@id/guideline21"
        app:layout_constraintStart_toStartOf="@id/guideline23"/>
    //灰色菇
    <ImageView
        android:id="@+id/q1"
        android:layout_width="138dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/q1"
        app:layout_constraintBottom_toBottomOf="@id/guideline19"
        app:layout_constraintStart_toStartOf="@id/guideline23"/>


    //水平線
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="273dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="182dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="259dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="345dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="383dp" />


    //垂直線

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="212dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="365dp" />
</androidx.constraintlayout.widget.ConstraintLayout>