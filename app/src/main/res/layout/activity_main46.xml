<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity46"
    android:background="@drawable/background">

    //三角形
    <ImageView
        android:id="@+id/f"
        android:layout_width="223dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/f" />

    //熊長方形
    <ImageView
        android:id="@+id/a1"
        android:layout_width="186dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toTopOf="@id/b1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a1" />
    //熊圓形
    <ImageView
        android:id="@+id/b1"
        android:layout_width="186dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toTopOf="@id/c1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/a1"
        app:srcCompat="@drawable/b1" />
    //熊菱形
    <ImageView
        android:id="@+id/c1"
        android:layout_width="186dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:srcCompat="@drawable/c1" />
    //熊星形
    <ImageView
        android:id="@+id/d1"
        android:layout_width="186dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toTopOf="@id/e1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/d1" />
    //熊正方形
    <ImageView
        android:id="@+id/e1"
        android:layout_width="186dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toTopOf="@id/f1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/d1"
        app:srcCompat="@drawable/e1" />
    //熊三角形
    <ImageView
        android:id="@+id/f1"
        android:layout_width="186dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/e1"
        app:srcCompat="@drawable/f1" />
</androidx.constraintlayout.widget.ConstraintLayout>